if [ $# -gt 0 ] ; then
   INTENT_ARGS='-d "$1"'  # e.g. a URL
fi

adb shell am start \
  -a android.intent.action.VIEW \
  -n org.chromium.content_shell/.ContentShellActivity \
  $INTENT_ARGS
