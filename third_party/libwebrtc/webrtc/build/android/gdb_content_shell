# Attach gdb to a running content shell. Redirect to the shell gdb_apk

ROOT=$(cd "$(dirname $0)"; pwd)

if [ $# -gt 0 ]; then
  exec ${ROOT}/gdb_apk -r -g "$*"
else
  exec ${ROOT}/gdb_apk -r -p org.chromium.content_shell
fi
