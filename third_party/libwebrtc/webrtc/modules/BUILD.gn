  sources = [
    "include/module.h",
    "include/module_common_types.h",
  ]
  deps = [
    ":module_api_public",
    "..:webrtc_common",
    "../api:optional",
    "../api:video_frame_api",
    "../api:video_frame_api_i420",
    "../rtc_base:rtc_base_approved",
    "video_coding:codec_globals_headers",
  ]
}

