DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= view
LIBRARY_NAME	= gkview
EXPORT_LIBRARY = 1
IS_COMPONENT    = 1
MODULE_NAME	= nsViewModule
REQUIRES	= xpcom \
		  string \
		  gfx \
		  layout \
		  content \
		  widget \
		  dom \
		  locale \
		  timer \
		  pref \
		  necko \
		  $(NULL)

EXTRA_DSO_LIBS = gkgfx

CPPSRCS		= \
		nsView.cpp \
		nsScrollingView.cpp \
		nsScrollPortView.cpp \
		nsViewManager.cpp \
		nsViewManager2.cpp \
		nsViewFactory.cpp \
		$(NULL)


EXTRA_DSO_LDOPTS = \
		-L$(DIST)/bin \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

DEFINES		+= -D_IMPL_NS_VIEW

