DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= mozldap
LIBRARY_NAME	= mozldap
SHORT_LIBNAME	= mozldap
EXPORT_LIBRARY	= 1
IS_COMPONENT	= 1
MODULE_NAME	= nsLDAPProtocolModule
REQUIRES	= xpcom \
		  string \
		  necko \
		  $(NULL)


CPPSRCS		= \
		nsLDAPProtocolModule.cpp \
		nsLDAPMessage.cpp \
		nsLDAPConnection.cpp \
		nsLDAPOperation.cpp \
		nsLDAPURL.cpp \
		nsLDAPServer.cpp \
		nsLDAPService.cpp \
		$(NULL)

ifdef MOZ_LDAP_XPCOM_EXPERIMENTAL
DEFINES		+= -DMOZ_LDAP_XPCOM_EXPERIMENTAL

CPPSRCS		+= \
		nsLDAPProtocolHandler.cpp \
		nsLDAPChannel.cpp \
		$(NULL)

REQUIRES	+= mimetype
endif


CSRCS		= \
		nsLDAPConnectionCallbacks.c \
		$(NULL)

EXTRA_DSO_LDOPTS += $(MOZ_COMPONENT_LIBS) $(LDAP_LIBS)

include $(topsrcdir)/config/rules.mk

CFLAGS		+= $(LDAP_CFLAGS)
CXXFLAGS	+= $(LDAP_CFLAGS)

