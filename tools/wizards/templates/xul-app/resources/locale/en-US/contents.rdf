<?xml version="1.0"?>

${license_xml}

<RDF:RDF xmlns:RDF="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
         xmlns:chrome="http://www.mozilla.org/rdf/chrome#">

  <!-- list all the packages being supplied by this jar -->
  <RDF:Seq about="urn:mozilla:locale:root">
    <RDF:li resource="urn:mozilla:locale:${locale_name_short}"/>
  </RDF:Seq>

  <!-- locale information -->
  <RDF:Description about="urn:mozilla:locale:${locale_name_short}"
        chrome:displayName="${locale_name_long}"
        chrome:author="app_author"
        chrome:name="${locale_name_short}"
        chrome:previewURL="${locale_preview_url}">
    <chrome:packages>
      <RDF:Seq about="urn:mozilla:locale:${locale_name_short}:packages">
        <RDF:li resource="urn:mozilla:locale:${locale_name_short}:${app_name_short}"/>
      </RDF:Seq>
    </chrome:packages>
  </RDF:Description>
</RDF:RDF>
