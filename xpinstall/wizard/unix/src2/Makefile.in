DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

PROGRAM		= mozilla-installer-bin
REQUIRES	= xpcom \
		  jar \
		  $(NULL)

CPPSRCS		= \
        nsINIParser.cpp \
        nsXInstallerDlg.cpp \
        nsComponent.cpp \
        nsSetupType.cpp \
        nsComponentList.cpp \
        nsObjectIgnore.cpp \
        nsLegacyCheck.cpp \
        nsRunApp.cpp \
        nsLicenseDlg.cpp \
        nsWelcomeDlg.cpp \
        nsSetupTypeDlg.cpp \
        nsComponentsDlg.cpp \
        nsInstallDlg.cpp \
        nsZipExtractor.cpp \
        nsXIOptions.cpp \
        nsXIContext.cpp \
        nsXInstaller.cpp \
        nsXIEngine.cpp \
        $(NULL)

LIBS        = \
        `$(GTK_CONFIG) --libs` \
        -ljar$(VERSION_NUMBER)_s \
        -lxpnet_s \
        -lpthread \
        $(NULL)

LOCAL_INCLUDES += -I$(srcdir)/../../../stub
LOCAL_INCLUDES += -I$(srcdir)/../../libxpnet/src

EXTRA_DEPS = \
	../../libxpnet/src/libxpnet_s.$(LIB_SUFFIX) \
	$(DIST)/lib/libjar50_s.$(LIB_SUFFIX)

include $(topsrcdir)/config/rules.mk

CXXFLAGS += `$(GTK_CONFIG) --cflags`
