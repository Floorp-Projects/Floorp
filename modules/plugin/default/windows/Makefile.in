DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= plugin
LIBRARY_NAME	= npnul32
RESFILE		= npnul32.res
DEFFILE		= $(win_srcdir)/npnul32.def
GRE_MODULE	= 1


CPPSRCS		= \
		maindll.cpp \
		plugin.cpp \
		dbg.cpp \
		dialogs.cpp \
		npshell.cpp \
		npwin.cpp \
		utils.cpp \
		$(NULL)

LOCAL_INCLUDES	= -I$(srcdir)

# plugins should always be shared, even in the "static" build
FORCE_SHARED_LIB = 1

# Force use of PIC
FORCE_USE_PIC	= 1

# must link statically with the CRT to avoid problems with VC8
USE_STATIC_LIBS = 1

NO_DIST_INSTALL	= 1
NO_INSTALL = 1

ifndef WINCE
ENABLE_CXX_EXCEPTIONS = 1
endif

include $(topsrcdir)/config/rules.mk

ifndef WINCE
_OS_LIBS	= version
endif

ifdef GNU_CC
_OS_LIBS	+= gdi32
endif
OS_LIBS		+= $(call EXPAND_LIBNAME,$(_OS_LIBS))

install-plugin: $(SHARED_LIBRARY)
ifdef SHARED_LIBRARY
	$(INSTALL) $(SHARED_LIBRARY) $(DIST)/bin/plugins
endif

libs:: install-plugin

install:: $(SHARED_LIBRARY)
ifdef SHARED_LIBRARY
	$(SYSINSTALL) $(IFLAGS2) $< $(DESTDIR)$(mozappdir)/plugins
endif

