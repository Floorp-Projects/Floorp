DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE	= freetype2
LIBRARY_NAME	= freetype2
GRE_MODULE	= 1
LIBXUL_LIBRARY = 1
DIST_INSTALL = 1
FORCE_STATIC_LIB = 1

VPATH += @srcdir@/src/autofit 	\
	@srcdir@/src/base 	\
