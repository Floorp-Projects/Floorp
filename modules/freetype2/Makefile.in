	@srcdir@/src/raster 	\
	@srcdir@/src/smooth 	\
	@srcdir@/src/truetype 	\
	@srcdir@/src/type1 	\
	@srcdir@/src/type42 	\
	@srcdir@/src/winfonts 	\
	@srcdir@/src/gzip	\
	@srcdir@/src/sfnt 	\
	@srcdir@/src/autofit 	\
