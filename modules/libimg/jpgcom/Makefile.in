DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

LIBRARY_NAME	= nsjpg
IS_COMPONENT	= 1
REQUIRES	= xpcom img util layout locale

CPPSRCS		= \
		jpeg.cpp \
		nsJPGDecoder.cpp \
		nsJPGModule.cpp \
		$(NULL)

LOCAL_INCLUDES	= -I$(srcdir)

EXTRA_DSO_LDOPTS = $(JPEG_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

EXTRA_LIBS	= $(NSPR_LIBS)

ifndef MOZ_JAVA
LOCAL_JMC_SUBDIR = .
endif

include $(topsrcdir)/config/rules.mk

ifeq ($(OS_ARCH)$(OS_RELEASE),SunOS5)
ifeq ($(shell uname -r),5.3)
# In this special case (jpeg.cpp), the compiler has to know
# the OS version to a finer granularity than normal.
DEFINES		+= -DOSMINOR=3
endif
endif

