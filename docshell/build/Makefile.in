DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

MODULE		= docshell
IS_COMPONENT = 1
MODULE_NAME	= docshell_provider

include $(DEPTH)/config/autoconf.mk

LIBRARY_NAME	= docshell
EXPORT_LIBRARY = 1
GRE_MODULE	= 1

REQUIRES	= xpcom \
		  string \
		  dom \
		  shistory \
		  necko \
		  gfx \
		  layout \
		  uriloader \
		  webshell \
		  widget \
		  pref \
		  view \
		  intl \
		  htmlparser \
		  chardet \
		  find \
		  composer \
		  editor \
		  commandhandler \
		  $(NULL)

ifeq ($(OS_ARCH),WINNT)
EXTRA_DSO_LIBS	= gkgfx
endif

ifdef MOZ_PHOENIX
REQUIRES += history
else
REQUIRES += appcomps
endif

CPPSRCS		= \
		nsDocShellModule.cpp		\
		$(NULL)

SHARED_LIBRARY_LIBS= \
		$(DIST)/lib/$(LIB_PREFIX)basedocshell_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS= \
		$(LIBS_DIR) \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_JS_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

LOCAL_INCLUDES	= \
		-I$(srcdir)			\
		-I$(srcdir)/../base		\
		$(NULL)

