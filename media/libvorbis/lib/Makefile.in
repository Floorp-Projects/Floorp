DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= vorbis
LIBRARY_NAME	= vorbis
FORCE_STATIC_LIB= 1
ifeq (WINNT,$(OS_TARGET))
VISIBILITY_FLAGS =
endif

CSRCS		= \
		vorbis_mdct.c \
		vorbis_smallft.c \
		vorbis_block.c \
		vorbis_info.c \
		vorbis_envelope.c \
		vorbis_window.c \
		vorbis_lsp.c \
		vorbis_lpc.c \
		vorbis_analysis.c \
		vorbis_synthesis.c \
		vorbis_psy.c \
		vorbis_floor1.c \
		vorbis_floor0.c \
		vorbis_res0.c \
		vorbis_mapping0.c \
		vorbis_registry.c \
		vorbis_codebook.c \
		vorbis_sharedbook.c \
		vorbis_lookup.c \
		vorbis_bitrate.c \
		$(NULL)

ifeq ($(OS_ARCH),AIX)
DEFINES += -Dalloca=__alloca
endif

include $(topsrcdir)/config/rules.mk
