DEPTH = ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

include $(topsrcdir)/config/config.mk

LIBRARY_NAME = raptorwidgetgtk_s

MODULE=widget

REQUIRES=util img xpcom raptor netlib

DEFINES += -D_IMPL_NS_WIDGET 

INCLUDES+= -I$(srcdir)/../xpwidgets -I$(srcdir)/../gtk -I$(srcdir)/.

INCLUDES += $(TK_CFLAGS)

CPPSRCS= \
	nsAppShell.cpp \
	nsClipboard.cpp	\
	nsComboBox.cpp \
	nsDragService.cpp \
	nsLabel.cpp \
	nsScrollbar.cpp \
	nsButton.cpp \
	nsListBox.cpp \
	nsLookAndFeel.cpp \
	nsTextAreaWidget.cpp \
	nsCheckButton.cpp \
	nsMenu.cpp \
	nsTextHelper.cpp \
	nsDialog.cpp \
	nsMenuBar.cpp \
	nsTextWidget.cpp \
	nsFileWidget.cpp \
	nsMenuItem.cpp \
	nsTabWidget.cpp \
	nsToolkit.cpp \
	nsGtkEventHandler.cpp \
	nsRadioButton.cpp \
	nsSelectionMgr.cpp \
	nsPopUpMenu.cpp \
	nsWidget.cpp \
	nsWindow.cpp \
	$(NULL)

TARGETS = $(LIBRARY)

MKSHLIB :=

# we don't want the shared lib, but we want to force the creation of a static lib.
override NO_SHARED_LIB=1
override NO_STATIC_LIB=

include $(topsrcdir)/config/rules.mk

