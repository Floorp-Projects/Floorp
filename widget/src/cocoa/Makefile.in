		  gfx \
		  string \
		  uconv \
		  dom \
		  webshell \
		  docshell \
		  plugin \
		  content \
		  layout \
		  view \
		  xul \
		  necko \
          nkcache \
		  locale \
          pref \
          exthandler \
          intl \
          mimetype \
		  unicharutil \
		  $(NULL)

EXPORTS = \
		mozView.h \
		$(NULL)

GFX_LCPPSRCS = \
		nsRegionMac.cpp \
		nsWatchTask.cpp \
		$(NULL)


CPPSRCS         =  \
