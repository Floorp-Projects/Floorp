{
  "manifest_version": 2,
  "name": "messaging",
  "version": "1.0",
  "description": "Test messaging between app and web extension",
  "applications": {
    "gecko": {
      "id": "messaging-iframe@tests.mozilla.org"
    }
  },
  "content_scripts": [
    {
      "matches": [
            "*://localhost/*"
       ],
      "js": ["messaging.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "geckoViewAddons",
    "nativeMessaging",
    "nativeMessagingFromContent"
  ]
}
