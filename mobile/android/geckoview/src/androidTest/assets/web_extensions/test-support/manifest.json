{
  "manifest_version": 2,
  "name": "Test support",
  "version": "1.0",
  "description": "Helper script for GeckoView tests",
  "applications": {
    "gecko": {
      "id": "test-support@tests.mozilla.org"
     }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["test-support.js"],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
  "background": {
    "scripts": ["background.js"]
  },
  "experiment_apis": {
    "test": {
      "schema": "test-schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "test-api.js",
        "events": ["startup"],
        "paths": [["test"]]
      }
    }
  },
  "options_ui": {
    "page": "dummy.html"
  },
  "permissions": [
    "geckoViewAddons",
    "nativeMessaging",
    "nativeMessagingFromContent"
  ]
}
