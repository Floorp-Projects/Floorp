            <item android:top="@dimen/awesomebar_tab_transparency_height">
                <shape android:shape="rectangle">
                    <solid android:color="#EEF1F5"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:maxLevel="1">
