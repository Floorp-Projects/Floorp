{
  "manifest_version": 2,
  "name": "Add-ons Search Detection",
  "hidden": true,
  "browser_specific_settings": {
    "gecko": {
      "id": "addons-search-detection@mozilla.com"
    }
  },
  "version": "2.0.0",
  "description": "",
  "experiment_apis": {
    "addonsSearchDetection": {
      "schema": "schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api.js",
        "events": [],
        "paths": [["addonsSearchDetection"]]
      }
    }
  },
  "permissions": [
    "<all_urls>",
    "telemetry",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
