{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "Floorp のシステムが含まれています。このアドオンは削除・停止ができません。",
  "version": "1.0",
  "homepage_url": "https://ablaze.one",
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "sessions",
    "storage",
    "clipboardWrite",
    "search",
    "activeTab",
    "browserSettings",
    "mozillaAddons",
    "about:*",
    "about:reader*"
  ],

	"browser_action": {
		"default_icon":  "icons/i.svg",
		"default_title": "__MSG_action__",
		"browser_style":  true
	},

  "page_action": {
    "browser_style": true,
    "default_icon": "icons/icon.svg",
    "default_popup": "qr-code/popup.html",
    "show_matches": [
      "<all_urls>"
    ]
  },

  "background": {
    "scripts": ["background-script.js"]
  },

  "applications": {
    "gecko": {
      "id": "floorp-system@floorp.ablaze.one"
    }
  },

  "default_locale": "en"
}
