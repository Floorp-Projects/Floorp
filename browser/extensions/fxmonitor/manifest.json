{
  "manifest_version": 2,
  "name": "Firefox Monitor",
  "version": "2.0",
  "background": {
    "scripts": ["background.js"]
  },
  "applications": {
    "gecko": {
      "id": "fxmonitor@mozilla.org",
      "strict_min_version": "62.0"
    }
  },
  "experiment_apis": {
    "fxmonitor": {
      "schema": "./privileged/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "./privileged/api.js",
        "paths": [["fxmonitor"]]
      }
    }
  }
}
