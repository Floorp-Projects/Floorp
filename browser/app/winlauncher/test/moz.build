DisableStlWrapping()

GeckoCppUnitTests(
    [
        "TestCrossProcessWin",
        "TestSafeThreadLocal",
        "TestSameBinary",
    ],
    linkage=None,
)

LOCAL_INCLUDES += [
    "/browser/app/winlauncher",
]

OS_LIBS += [
    "ntdll",
]

if CONFIG["CC_TYPE"] in ("gcc", "clang"):
    # This allows us to use wmain as the entry point on mingw
    LDFLAGS += [
        "-municode",
    ]
