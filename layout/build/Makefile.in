DEPTH = ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

include $(topsrcdir)/config/config.mk

DEFINES += -D_IMPL_NS_HTML

LIBRARY_NAME = raptorhtml

MODULE=layout

REQUIRES=xpcom raptor dom js

CPPSRCS=dlldeps.cpp nsLayoutFactory.cpp

EXPORTS=nsLayoutCID.h

INCLUDES +=  -I$(srcdir)/../html/base/src

ifeq ($(OS_ARCH),IRIX)
LD = $(CCC)
LD_ALL = -all
LD_NONE = -none
endif

BASE_DSO_FLAGS = $(addprefix -lgmbase, $(MOZ_TOOLKIT))

EXTRA_DSO_LDOPTS = \
	-L$(DIST)/bin           \
	-L$(DIST)/lib		\
	-lraptorhtmldoc_s	\
	-lnglhtmlcon_s		\
	-lraptorhtmlstyle_s	\
	-lraptorhtmlforms_s	\
	-lraptorhtmlstyle_s	\
	-lraptorhtmlbase_s	\
	-lraptorhtmltable_s	\
	-lraptorxmldoc_s	\
	-lraptorxmlcontent_s	\
	-lraptorlayout_s        \
	-lraptorevents_s	\
	-lraptorhtmlpars	\
	-lraptorgfx	\
	-lraptorbase	\
	$(BASE_DSO_FLAGS) \
	-ljsdom		\
	-ljs		\
	-lnetlib	\
	-lxpcom		\
	$(NSPR_LIBS)	\
	$(NULL)

include $(topsrcdir)/config/rules.mk
