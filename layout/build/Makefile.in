DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= layout
LIBRARY_NAME	= gklayout
EXPORT_LIBRARY = 1
SHORT_LIBNAME	= gkhtml
IS_COMPONENT	= 1
MODULE_NAME	= nsLayoutModule
EXTRA_DSO_LIBS	= gkgfx
REQUIRES	= xpcom \
		  string \
		  content \
		  gfx \
		  widget \
		  locale \
		  timer \
		  necko \
		  $(NULL)

CPPSRCS		= \
		nsLayoutModule.cpp \
		$(NULL)

ifndef MKSHLIB_FORCE_ALL
CPPSRCS		+= dlldeps.cpp
endif

EXPORTS		= nsLayoutCID.h

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/libgkhtmlbase_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libgkhtmldoc_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libgkhtmlforms_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libgkhtmlstyle_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libgkhtmltable_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libgkxulbase_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libgkbase_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libgkconshared_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libgkxuloutliner_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libgkxulgrid_s.$(LIB_SUFFIX) \
		$(NULL)

ifdef MOZ_GRID2
SHARED_LIBRARY_LIBS += $(DIST)/lib/libgkxulgrid_s.$(LIB_SUFFIX) \
        $(NULL)
endif

ifdef MOZ_PERF_METRICS
SHARED_LIBRARY_LIBS += \
		$(DIST)/lib/libmozutil_s.$(LIB_SUFFIX) \
		$(NULL)
endif

ifdef MOZ_MATHML
SHARED_LIBRARY_LIBS += \
                $(DIST)/lib/libgkmathmlcon_s.$(LIB_SUFFIX) \
                $(DIST)/lib/libgkmathmlbase_s.$(LIB_SUFFIX) \
                $(NSNULL)
endif

ifdef MOZ_SVG
SHARED_LIBRARY_LIBS += \
                $(DIST)/lib/libgksvgcon_s.$(LIB_SUFFIX) \
                $(DIST)/lib/libgksvgbase_s.$(LIB_SUFFIX) \
                $(NSNULL)
endif

EXTRA_DSO_LDOPTS = \
		-L$(DIST)/bin \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(MOZ_UNICHARUTIL_LIBS) \
		$(MOZ_JS_LIBS) \
		$(NULL)

ifeq ($(MOZ_WIDGET_TOOLKIT),os2)
EXPORT_OBJS	= 1
endif

include $(topsrcdir)/config/rules.mk

DEFINES		+= -D_IMPL_NS_HTML

INCLUDES	+= -I$(srcdir)/../base/src \
		   -I$(srcdir)/../html/base/src \
		   -I$(srcdir)/../html/style/src \
		   -I$(srcdir)/../xul/content/src \
		   -I$(srcdir)/../xul/base/src \
		   $(NULL)

ifdef MOZ_MATHML
INCLUDES += -I$(srcdir)/../mathml/content/src
endif

ifdef MOZ_SVG
INCLUDES += -I$(srcdir)/../svg/content/src
endif

