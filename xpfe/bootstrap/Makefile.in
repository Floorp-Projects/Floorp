DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= apprunner
PROGRAM		= mozilla-bin

CPPSRCS		= \
		nsAppRunner.cpp \
		nsSetupRegistry.cpp \
		nsSigHandlers.cpp \
		$(NULL)

XP_DIST_LIBS	= \
		-lraptorgfx \
		-lmozjs \
		$(XPCOM_LIBS) \
		$(OJI_LIBS) \
		$(NULL)

XP_NS_UNDERBAR_CRAP = \
		$(MOZ_TIMER_LIBS) \
		$(NULL)

XP_LIBS		= \
		$(XP_NS_UNDERBAR_CRAP) \
		$(XP_DIST_LIBS) \
		$(NSPR_LIBS) \
		$(NULL)

ifdef MOZ_FULLCIRCLE
XP_LIBS		+= $(FULLCIRCLE_LIBS)
endif

ifdef MOZ_MONOLITHIC_TOOLKIT
XP_LIBS		+= $(TK_LIBS)
endif

ifeq ($(OS_ARCH),Rhapsody)
DETECT_WEBSHELL_LEAKS=
endif

ifdef DETECT_WEBSHELL_LEAKS
XP_LIBS         += -lraptorwebwidget -ldocshell -ljsdom
endif

ifdef MOZ_JPROF
XP_LIBS         += -ljprof
endif

ifdef MOZ_OJI
OJI_LIBS	= -ljsj
endif

LIBS		= $(XP_LIBS)

ifdef GC_LEAK_DETECTOR
LIBS += -lboehm
endif

XP_DIST_DEP_LIBS := $(filter-out -L$(DIST)/bin -L$(DIST)/lib, $(XP_DIST_LIBS))

EXTRA_DEPS	= \
		$(addprefix $(DIST)/,$(patsubst -l%,bin/lib%$(DLL_SUFFIX),$(XP_DIST_DEP_LIBS:-l%_s=lib/lib%_s.a))) \
		$(XP_NS_UNDERBAR_CRAP) \
		$(NULL)

ifeq ($(MOZ_WIDGET_TOOLKIT),beos)
BEOS_PROGRAM_RESOURCE = $(srcdir)/apprunner-beos.rsrc
endif

ifeq ($(MOZ_WIDGET_TOOLKIT),photon)
CPPSRCS += nsNativeAppSupportPh.cpp
LIBS += -lphexlib
endif

#ifeq ($(MOZ_WIDGET_TOOLKIT),gtk)
#CPPSRCS += nsNativeAppSupportGtk.cpp
#LIBS += $(MOZ_GTK_LDFLAGS) -lgdk -lglib -lX11 
#endif

include $(topsrcdir)/config/rules.mk

CXXFLAGS	+= $(MOZ_TOOLKIT_REGISTRY_CFLAGS)

install:: $(srcdir)/mozilla
	$(INSTALL) $< $(DIST)/bin

ifeq ($(MOZ_WIDGET_TOOLKIT),photon)
install:: $(srcdir)/splash.bmp
	$(INSTALL) $< $(DIST)/bin
endif

ifeq ($(MOZ_WIDGET_TOOLKIT),gtk)
install:: $(srcdir)/splash.xpm
	$(INSTALL) $< $(DIST)/bin
endif
