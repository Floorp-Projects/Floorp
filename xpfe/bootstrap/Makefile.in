ifdef BUILD_STATIC_LIBS
EXE_DEF_FILE = mozilla.def
endif
endif

SRCS_IN_OBJDIR=1 

ifneq (,$(filter-out OS2 WINNT,$(OS_ARCH)))
GARBAGE         += $(STACKWALK_SRC_LCSRCS) $(wildcard *.$(OBJ_SUFFIX))
endif

include $(topsrcdir)/config/rules.mk

ifneq (,$(filter-out OS2 WINNT,$(OS_ARCH)))
export:: $(STACKWALK_CPPSRCS)
	$(INSTALL) $^ .
endif

