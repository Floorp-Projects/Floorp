DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

ifndef MOZ_THUNDERBIRD
DIRS	= \
			directory \
			filepicker \
			find \
			search \
			related \
			prefwindow \
			shistory \
			console \
			updates \
			intl \
			resetPref \
			killAll \
			windowds \
			$(NULL)

ifndef MOZ_PHOENIX
DIRS += \
		autocomplete \
		bookmarks \
		download-manager \
		history \
		urlbarhistory \
		sidebar \
		$(NULL)
endif

ifeq ($(OS_ARCH),WINNT)
DIRS		+= urlwidget 
ifndef MOZ_PHOENIX
DIRS    += winhooks alerts
endif
endif

else

DIRS    = \
          intl \
	  find \
	  filepicker \
          download-manager \
          autocomplete \
          windowds \
          prefwindow \
          console \
          sidebar/public \
          history/public \
          shistory/public \
          bookmarks/public \
          $(NULL)

ifeq ($(OS_ARCH),WINNT) 
DIRS    += alerts winhooks
endif

endif

ifdef MOZ_ENABLE_XREMOTE
DIRS		+= xremote
endif

ifndef MOZ_THUNDERBIRD
ifndef MOZ_STANDALONE_COMPOSER
DIRS		+= build
else
DIRS		+= build2
endif
else
DIRS	        += build2
endif

include $(topsrcdir)/config/rules.mk

