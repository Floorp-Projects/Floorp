DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= filepicker
LIBRARY_NAME	= fileview
SHORT_LIBNAME	= fileview
EXPORT_LIBRARY	= 1
IS_COMPONENT	= 1
MODULE_NAME	= nsFileViewModule
REQUIRES	= \
		xpcom \
		layout \
		dom \
		string \
		locale \
		$(NULL)

CPPSRCS		= \
		nsFileView.cpp \
		nsWildCard.cpp \
		$(NULL)

include $(topsrcdir)/config/rules.mk

install::
	$(INSTALL) $(srcdir)/nsFilePicker.js $(DIST)/bin/components
