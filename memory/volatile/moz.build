NoVisibilityFlags()

EXPORTS.mozilla += [
    "VolatileBuffer.h",
]

if CONFIG["OS_TARGET"] == "Android":
    UNIFIED_SOURCES += [
        "VolatileBufferAshmem.cpp",
    ]
elif CONFIG["OS_TARGET"] == "Darwin":
    UNIFIED_SOURCES += [
        "VolatileBufferOSX.cpp",
    ]
elif CONFIG["OS_TARGET"] == "WINNT":
    UNIFIED_SOURCES += [
        "VolatileBufferWindows.cpp",
    ]
else:
    UNIFIED_SOURCES += [
        "VolatileBufferFallback.cpp",
    ]

FINAL_LIBRARY = "xul"

TEST_DIRS += ["tests"]
