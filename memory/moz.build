    DIRS += [
        "mozjemalloc_info",
    ]
else:
    # For now, don't build mozalloc when building with --enable-project=memory
    DIRS += [
        "mozalloc",
    ]

if CONFIG["MOZ_WIDGET_TOOLKIT"]:
    DIRS += ["volatile"]

# NB: gtest dir is included in toolkit/toolkit.build due to its dependency
# on libxul.

if CONFIG["MOZ_REPLACE_MALLOC"]:
    DIRS += ["replace"]
