
DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= thebes
LIBRARY_NAME	= thebes
LIBXUL_LIBRARY = 1

REQUIRES = \
	cairo \
	libpixman \
	string \
	xpcom \
	$(NULL)

CPPSRCS	= \
	gfxContext.cpp \
	gfxImageSurface.cpp \
	gfxPattern.cpp \
	$(NULL)


ifeq ($(MOZ_GFX_TOOLKIT),windows)
CPPSRCS	+= 	gfxWindowsSurface.cpp
endif

ifeq ($(MOZ_GFX_TOOLKIT),gtk2)
CPPSRCS	+= 	gfxXlibSurface.cpp
endif

ifdef MOZ_ENABLE_GLITZ
REQUIRES += 	glitz
CPPSRCS +=	gfxGlitzSurface.cpp

ifeq ($(MOZ_GFX_TOOLKIT),gtk2)
REQUIRES +=	glitzglx
endif
endif

FORCE_STATIC_LIB = 1
# This library is used by other shared libs in a static build
FORCE_USE_PIC = 1

include $(topsrcdir)/config/rules.mk
