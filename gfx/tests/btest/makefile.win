DEPTH=..\..\..

MAKE_OBJ_TYPE	= EXE
PROG0 = .\$(OBJDIR)\BitTest.exe
RESFILE = image.res
PROGRAMS = $(PROG0)

LINCS=-I$(XPDIST)\public\raptor -I$(XPDIST)\public\xpcom -I..\src

LLIBS=				\
 $(DIST)\lib\raptorbase.lib		\
 $(DIST)\lib\raptorgfxwin.lib		\
 $(DIST)\lib\xpcom32.lib		\
 $(LIBNSPR)			\
 $(DIST)\lib\plc3.lib		\
 $(DIST)\lib\img32$(VERSION_NUMBER).lib		\
 $(DIST)\lib\util.lib 		 \
 comdlg32.lib                    \
 $(RESFILE)

include <$(DEPTH)\config\rules.mak>

install:: $(PROGRAMS)
	$(MAKE_INSTALL) $(PROG0) $(DIST)\bin

clobber::
	rm -f $(DIST)\bin\BitTest.exe

# Move this into config/obj.inc when it's allowed
.cpp{.\$(OBJDIR)\}.exe:
    $(CC) @<<$(CFGFILE)
        $(CFLAGS)
        $(LCFLAGS)
        $(LINCS)
        $(LINCS_1)
        $(INCS)
        $(LLIBS)
        $(OS_LIBS)
        -Fd.\$(OBJDIR)\
        -Fe.\$(OBJDIR)\
        -Fo.\$(OBJDIR)\
        $(CURDIR)$(*B).cpp
<<

$(PROG0): $(OBJDIR) BitTest.cpp $(RESFILE)
