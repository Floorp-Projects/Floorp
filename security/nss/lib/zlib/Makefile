EXTRA_LIBS = $(LIBRARY)

ifneq ($(OS_ARCH),WINNT)
DEFINES += -DHAVE_UNISTD_H
endif
DEFINES += -DHAVE_STDARG_H

#######################################################################
# (5) Execute "global" rules. (OPTIONAL)                              #
#######################################################################

include $(CORE_DEPTH)/coreconf/rules.mk

