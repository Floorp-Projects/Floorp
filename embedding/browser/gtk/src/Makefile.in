DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

LIBRARY_NAME	= gtkembedmoz
REQUIRES	= xpcom docshell webshell necko widget dom layout locale js uriloader webbrwsr shistory appshell embed_base xpconnect pref

CPPSRCS		= \
		GtkMozEmbedChrome.cpp \
		GtkMozEmbedStream.cpp \
		gtkmozembed.cpp

SHARED_LIBRARY_LIBS= \
		$(DIST)/lib/libembed_base_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libxpfelocation_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libmpfilelocprovider_s.$(LIB_SUFFIX) \
		$(NULL)

EXPORTS		= \
		gtkmozembed.h \
		gtkmozembed_internal.h

EXTRA_DSO_LDOPTS = \
		$(MOZ_COMPONENT_LIBS) \
		-lgtksuperwin \
		$(NULL)

ifndef MOZ_MONOLITHIC_TOOLKIT
EXTRA_DSO_LDOPTS += $(MOZ_GTK_LDFLAGS)
else
EXTRA_DSO_LDOPTS += $(TK_LIBS)
endif

include $(topsrcdir)/config/rules.mk

CXXFLAGS        += $(MOZ_GTK_CFLAGS)
