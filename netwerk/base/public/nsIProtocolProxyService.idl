#include "nsISupports.idl"
#include "nsIURI.idl"

interface nsIProxyInfo;

%{C++
#define NS_PROTOCOLPROXYSERVICE_CID                             \
{ /* E9B301C0-E0E4-11d3-A1A8-0050041CAF44 */                    \
0xe9b301c0, 0xe0e4, 0x11d3, { 0xa1, 0xa8, 0x0, 0x50, 0x4, 0x1c, 0xaf, 0x44 } }
