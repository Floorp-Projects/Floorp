DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= test_necko
REQUIRES	= xpcom \
		  string \
		  necko \
		  nkcache \
		  timer \
		  cookie \
		  dbm \
		  util \
		  $(NULL)

SHARED_LIBRARY_LIBS = $(DIST)/lib/libmozdbm_s.$(LIB_SUFFIX)

CPPSRCS		= \
		TestSocketIO.cpp \
		TestSocketInput.cpp \
		TestSocketTransport.cpp \
		TestFileInput.cpp \
		TestFileTransport.cpp \
		TestProtocols.cpp \
        TestHttp.cpp \
		urltest.cpp \
		TestFileInput2.cpp \
		TestCallbacks.cpp \
		TestDBMAccess.cpp \
		TestMCTransport.cpp \
		TestPageLoad.cpp \
		TestIDN.cpp \
		$(NULL)

SIMPLE_PROGRAMS	= $(CPPSRCS:.cpp=$(BIN_SUFFIX))

include $(topsrcdir)/config/config.mk

LIBS		= \
		$(MOZ_JS_LIBS) \
		$(XPCOM_LIBS) \
		$(NSPR_LIBS) \
		$(SHARED_LIBRARY_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

DEFINES		+= -DUSE_NSREG

install:: $(TARGETS)
	$(INSTALL) $(srcdir)/urlparse.dat $(DIST)/bin/res
	$(INSTALL) $(srcdir)/urlparse_unx.dat $(DIST)/bin/res
