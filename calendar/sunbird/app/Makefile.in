ifeq ($(OS_ARCH),OS2)
	cp $(srcdir)/sunbird-os2.ico  $(DIST)/branding/sunbird.ico
	cp $(srcdir)/sunbird-os2.ico  $(DIST)/branding/app.ico
	cp $(srcdir)/sunbird-os2.ico  $(DIST)/branding/document.ico
