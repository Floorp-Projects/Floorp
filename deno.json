{
  "license": "MPL-2.0",
  "links": ["libs/@types/gecko"],
  "workspace": ["./libs/*", "./browser-features/*", "./bridge/*"],
  "imports": {
    "@std/cli": "jsr:@std/cli@^1.0.21",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.18",
    "@std/path": "jsr:@std/path@^1.1.2",
    "#i18n/": "./i18n/",
    "#chrome/": "./chrome/",
    "#libs/": "./libs/",
    "#features-chrome/": "./browser-features/chrome/",
    "#modules/": "./browser-features/modules/",
    "#ui/": "./src/ui/",
    "#themes/": "./src/themes/",
    "@std/streams": "jsr:@std/streams@^1.0.11",
    "@std/toml": "npm:@jsr/std__toml@^1.0.9",
    "vite": "npm:rolldown-vite@^7.1.4"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "ESNext", "dom", "dom.asynciterable"],
    "checkJs": true
  },
  "exclude": [
    "tools/build/tasks/inject/wasm/nora-inject.js",
    "**/_dist/**/*",
    "libs/@types/gecko/**/*",
    "libs/user-js-runner/**/*",
    "tools/build/tasks/inject/mixins/**/*",
    "chrome/**/*",
    "modules/**/*",
    "src/**/*",
    "node_modules/**/*"
  ],
  "tasks": {
    "feles-build": "deno run -A tools/feles-build.ts"
  },
  "nodeModulesDir": "auto"
}
