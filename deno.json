{
  "patch": ["libs/@types/gecko"],
  "unstable": ["npm-patch"],
  "workspace": ["./libs/*", "./chrome/*", "./modules/*", "./src/core/glue/*"],
  "imports": {
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.18",
    "@std/path": "jsr:@std/path@^1.0.7",
    "#i18n/": "./i18n/",
    "#chrome/": "./chrome/",
    "#libs/": "./libs/",
    "#chrome/browser/": "./chrome/browser/",
    "#features-chrome/": "./chrome/browser/",
    "#i18n-features-chrome/": "./i18n/features-chrome/",
    "#modules/": "./modules/",
    "#shared/": "./src/shared/",
    "#features/": "./src/features/",
    "#ui/": "./src/ui/",
    "#themes/": "./src/themes/",
    "@std/streams": "jsr:@std/streams@^1.0.9"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "ESNext", "dom", "dom.asynciterable"],
    "checkJs": true
  },
  "tasks": {
    "dev": "deno run -A build.ts --dev",
    "prod-before": "deno run -A build.ts --production-before",
    "prod-after": "deno run -A build.ts --production-after",
    "write-version": "deno run -A build.ts --write-version",

    "dev-with-patch-git": "deno run -A build.ts --dev --init-git-for-patch",
    "prod-with-patch-git": "deno run -A build.ts --production --init-git-for-patch",

    "apply-patches": "deno run -A ./tools/build/tasks/git-patches/git-patches-manager.ts --apply",
    "init-bin-git": "deno run -A ./tools/build/tasks/git-patches/git-patches-manager.ts --init",
    "create-patches": "deno run -A ./tools/build/tasks/git-patches/git-patches-manager.ts --create"
  },
  "nodeModulesDir": "auto"
}
