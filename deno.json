{
  "patch": ["libs/@types/gecko"],
  "unstable": ["npm-patch"],
  "workspace": ["./libs/*", "./chrome/*", "./modules/*", "./src/core/glue/*"],
  "imports": {
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/fs": "jsr:@std/fs@^1.0.18",
    "#i18n/": "./i18n/",
    "#chrome/": "./chrome/",
    "#libs/": "./libs/",
    "#chrome/browser/": "./chrome/browser/",
    "#features-chrome/": "./chrome/browser/",
    "#i18n-features-chrome/": "./i18n/features-chrome/",
    "#modules/": "./modules/",
    "#shared/": "./src/shared/",
    "#features/": "./src/features/",
    "#ui/": "./src/ui/",
    "#themes/": "./src/themes/",
    "@std/streams": "jsr:@std/streams@^1.0.9"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "ESNext", "dom", "dom.asynciterable"],
    "checkJs": true
  },
  "tasks": {
    "build": "deno run -A build.ts",
    "dev": "deno run -A build.ts --run",
    "apply-patches": "deno run -A ./scripts/git-patches/git-patches-manager.ts --apply",
    "dev-with-init-bin-git": "deno run -A ./build.ts --run-with-init-bin-git",
    "init-bin-git": "deno run -A ./scripts/git-patches/git-patches-manager.ts --init",
    "create-patches": "deno run -A ./scripts/git-patches/git-patches-manager.ts --create"
  },
  "nodeModulesDir": "auto"
}
