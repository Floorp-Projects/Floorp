name: firefox
version: @VERSION@-@BUILD_NUMBER@
summary: Mozilla Firefox web browser
description:  Firefox is a powerful, extensible web browser with support for modern web application technologies.
confinement: strict

apps:
  firefox:
    command: desktop-launch firefox
    desktop: opt/firefox/distribution/firefox.desktop
    environment:
      DISABLE_WAYLAND: 1
    plugs:
      - browser-sandbox
      - camera
      - desktop
      - desktop-legacy
      - gsettings
      - home
      - network
      - opengl
      - pulseaudio
      - screen-inhibit-control
      - unity7
      - x11

plugs:
  browser-sandbox:
    interface: browser-support
    allow-sandbox: true

parts:
  firefox:
    plugin: dump
    source: source
    stage-packages:
      - libxt6
      - libdbus-glib-1-2
      - libasound2
      - libpulse0
      - libgl1-mesa-dri
      - libgl1-mesa-glx
      - libmirclient9
    after: [desktop-gtk3]
