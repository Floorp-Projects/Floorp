<?xml version="1.0"?>

<bindings id="dialogBindings"
          xmlns="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <binding id="smallheader" extends="chrome://communicator/content/dialogBindings.xml#smallheader">
    <content>
      <xul:hbox class="box-smallheader-text-container" align="center" flex="1">
        <children/>
        <xul:label class="box-smallheader-left" inherits="value=title"/>
        <xul:spacer flex="1"/>
        <xul:label class="box-smallheader-right" inherits="value=description"/>
      </xul:hbox>
    </content>
  </binding>
  
 <binding id="largeheader" extends="xul:box">
    <content>
      <xul:hbox class="largeheader-box" flex="1">
        <xul:vbox class="largeheader-text-container">
          <xul:spacer flex="1"/>
          <xul:label class="largeheader-header-text" inherits="value=title" crop="right"/>
          <xul:description class="largeheader-desc-text" inherits="value=description"/>
          <children/>
          <xul:spacer flex="1"/>
        </xul:vbox>
        <xul:spacer flex="1"/>
        <xul:hbox class="largeheader-icon-container" align="center">
          <xul:image class="largeheader-icon" inherits="src"/>
        </xul:hbox>
      </xul:hbox>
    </content>
  </binding>
  
</bindings>
