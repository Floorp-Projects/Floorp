TEST_DIRS += [
    "gtest",
]

if CONFIG["OS_ARCH"] == "WINNT":
    TEST_DIRS += ["windows"]

if CONFIG["OS_TARGET"] == "Linux":
    CppUnitTests(
        [
            "TestMemoryPressureWatcherLinux",
        ]
    )

EXPORTS.testing += [
    "TestHarness.h",
]

test_progs = [
    "TestArguments",
    "TestBlockingProcess",
    "TestPRIntN",
    "TestQuickReturn",
    "TestUnicodeArguments",
]
SimplePrograms(test_progs)

USE_LIBS += ["mozglue"]

XPCSHELL_TESTS_MANIFESTS += ["unit/xpcshell.ini"]

if CONFIG["COMPILE_ENVIRONMENT"]:
    TEST_HARNESS_FILES.xpcshell.xpcom.tests.unit += [
        "!%s%s" % (f, CONFIG["BIN_SUFFIX"]) for f in test_progs
    ]

XPIDL_MODULE = "xpcomtest"
XPIDL_SOURCES += [
    "NotXPCOMTest.idl",
]

LOCAL_INCLUDES += [
    "../base",
    "../ds",
]

RESOURCE_FILES += [
    "test.properties",
]

CRASHTEST_MANIFESTS += ["crashtests/crashtests.list"]
