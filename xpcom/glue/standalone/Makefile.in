DEPTH		= @DEPTH@
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk
include $(srcdir)/../objs.mk

EXTRA_DEPS += $(srcdir)/../objs.mk

LIBRARY_NAME	= xpcomglue
DIST_INSTALL	= 1

LOCAL_INCLUDES	= \
	-I$(srcdir)/../../build \
	$(NULL)

CPPSRCS		= \
	$(XPCOM_GLUE_SRC_LCPPSRCS)   \
	nsStringAPI.cpp              \
	nsXPCOMGlue.cpp              \
	$(LINKSRC)                   \
	$(NULL)

SDK_HEADERS     = \
	nsXPCOMGlue.h \
	$(NULL)

SDK_LIBRARY     	= \
	$(LIB_PREFIX)xpcomglue.$(LIB_SUFFIX) \
	$(NULL)

FORCE_STATIC_LIB = 1

# Don't use STL wrappers here (i.e. wrapped <new>); they require mozalloc
STL_FLAGS	=

GARBAGE         += $(XPCOM_GLUE_SRC_LCPPSRCS)

SRCS_IN_OBJDIR	= 1

include $(topsrcdir)/config/rules.mk

ifdef _MSC_VER
# Don't include directives in obj files about which CRT to use
OS_COMPILE_CXXFLAGS += -Zl
OS_COMPILE_CFLAGS += -Zl
DEFINES += -D_USE_ANSI_CPP
endif

export:: $(XPCOM_GLUE_SRC_CPPSRCS) $(topsrcdir)/xpcom/glue/nsStringAPI.cpp
	$(INSTALL) $^ .

GARBAGE += nsStringAPI.cpp

DEFINES		+= -DXPCOM_GLUE

ifdef TARGET_XPCOM_ABI
DEFINES += -DTARGET_XPCOM_ABI=\"$(TARGET_XPCOM_ABI)\"
endif

