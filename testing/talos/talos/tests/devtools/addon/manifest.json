{
  "manifest_version": 2,
  "name": "DAMP - Devtools At Maximum Performance",
  "version": "0.1",

  "applications": {
    "gecko": {
      "id": "bug1150215@mozilla.org"
    }
  },

  "protocol_handlers": [
    {
      "protocol": "ext+damp",
      "name": "damp protocol",
      "uriTemplate": "/damp.html"
    }
  ],

  "experiment_apis": {
    "damp": {
      "schema": "schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api.js",
        "paths": [["damp"]]
      }
    }
  }
}
