{
  "manifest_version": 2,
  "name": "PageLoader extension",
  "description": "Cycles through pages and measures load times",
  "version": "1.1",

  "applications": {
    "gecko": {
      "id": "pageloader@mozilla.org"
    }
  },

  "experiment_apis": {
    "pageloader": {
      "schema": "schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api.js",
        "events": ["startup"]
      }
    }
  }
}
