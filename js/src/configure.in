    elif test -e "$android_ndk/sources/cxx-stl/stlport/libs/$ANDROID_CPU_ARCH/libstlport_static.a" ; then
       STLPORT_CPPFLAGS="-I$android_ndk/sources/cxx-stl/stlport/stlport"
