DEPTH 		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= jsloader
LIBRARY_NAME	= jsloader
IS_COMPONENT	= 1
REQUIRES	= xpcom xpconnect js caps dom

CPPSRCS		= mozJSComponentLoader.cpp

include $(topsrcdir)/config/rules.mk

DEFINES		+= -DJSFILE -DJS_THREADSAFE

ifneq ($(OS_ARCH),BeOS)
LIBS		+= $(MOZ_JS_LIBS) $(XPCOM_LIBS) $(NSPR_LIBS)
endif

EXTRA_DSO_LDOPTS += \
		$(MOZ_COMPONENT_LIBS) \
		$(MOZ_JS_LIBS) \
		$(NULL)

