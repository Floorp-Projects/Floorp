DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= editor
LIBRARY_NAME	= texteditor_s
IS_COMPONENT	= 1

REQUIRES        = xpcom \
                  string \
                  dom \
                  locale \
                  layout \
                  content \
                  uriloader \
                  txmgr \
                  htmlparser \
                  necko \
                  pref \
                  view \
                  webshell \
                  timer \
                  txtsvc \
                  intl \
                  lwbrk \
                  docshell \
                  gfx \
                  widget \
                  $(NULL)

CPPSRCS		=                           \
		nsPlaintextDataTransfer.cpp \
		nsPlaintextEditor.cpp       \
		nsTextEditUtils.cpp         \
		nsTextEditRules.cpp         \
		nsEditorEventListeners.cpp  \
		nsWrapUtils.cpp  \
		nsInternetCiter.cpp  \
		nsAOLCiter.cpp  \
		$(NULL)

ifdef IBMBIDI
CPPSRCS		+= \
		nsTextEditRulesBidi.cpp \
		$(NULL)
endif                

# don't want the shared lib; force the creation of a static lib.
FORCE_STATIC_LIB = 1

include $(topsrcdir)/config/rules.mk

INCLUDES        += -I$(topsrcdir)/editor/libeditor/base

