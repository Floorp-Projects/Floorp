DEPTH     = @DEPTH@
topsrcdir = @top_srcdir@
srcdir	  = @srcdir@
VPATH	  = @srcdir@

include $(DEPTH)/config/autoconf.mk

FORCE_SHARED_LIB = 1
IS_COMPONENT	= 1
EXTRA_DSO_LDOPTS += \
		$(XPCOM_GLUE_LDOPTS) \
		$(XPCOM_FROZEN_LDOPTS) \
		$(NSPR_LIBS) \
		$(MOZ_GCONF_LIBS) \
		$(MOZ_GNOMEVFS_LIBS) \
		$(GLIB_LIBS) \
		$(MOZ_GIO_LIBS) \
		$(NULL)

LOCAL_INCLUDES += -I$(topsrcdir)/toolkit/components/build/

include $(topsrcdir)/config/rules.mk

CXXFLAGS += \
	$(MOZ_GCONF_CFLAGS) \
	$(MOZ_GNOMEVFS_CFLAGS) \
	$(MOZ_GIO_CFLAGS) \
	$(GLIB_CFLAGS) \
	$(NULL)

ifdef MOZ_ENABLE_GTK
CXXFLAGS += \
	$(TK_CFLAGS) \
	$(NULL)
endif
