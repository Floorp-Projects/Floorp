                        cmd="cmd_cancel" ondblclick="event.stopPropagation();"
                        oncommand="performCommand('cmd_cancel', this);"/>
          </xul:hbox>
          <xul:label xbl:inherits="value=status,tooltiptext=statusTip" flex="1"
                     crop="right" class="status"/>
          <xul:spacer flex="1"/>
        </xul:vbox>
      </xul:hbox>
    </content>
  </binding>
  
