DEPTH = ../../../..
topsrcdir = @top_srcdir@
srcdir = @srcdir@
VPATH = @srcdir@
ADDONSRC = $(srcdir)/unit/addons
TESTROOT = $(shell cd $(DEPTH) && pwd)/_tests/xpcshell-simple/$(MODULE)
TESTPROFILE = $(TESTROOT)/profile
TESTXPI = $(TESTROOT)/unit/addons
relativesrcdir  = toolkit/mozapps/extensions/test

include $(DEPTH)/config/autoconf.mk

MODULE = test_extensionmanager

XPCSHELL_TESTS = \
  unit \
  $(NULL)

_CHROME_FILES = \
  test_bug435743_1.xul \
  test_bug435743_2.xul \
  bug435743.rdf \
  bug435743.xpi \
  bug435743.sjs \
  $(NULL)

include $(topsrcdir)/config/rules.mk

libs:: $(_CHROME_FILES)
	$(INSTALL) $(foreach f,$^,"$f") $(DEPTH)/_tests/testing/mochitest/chrome/$(relativesrcdir)

libs::
	rm -rf $(TESTXPI)
	mkdir -p $(TESTXPI)
	if [ -d $(ADDONSRC) ]; then \
		$(EXIT_ON_ERROR) \
		for dir in $(ADDONSRC)/*; do \
			if [ "$$dir" != "$(ADDONSRC)/CVS" ]; then \
				base=`basename $$dir` ; \
				(cd $$dir && zip $(TESTXPI)/$$base.xpi *) \
			fi \
		done \
	fi
