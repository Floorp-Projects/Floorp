ADDONSRC = $(srcdir)/addons
TESTXPI = $(CURDIR)/$(DEPTH)/_tests/testing/mochitest/browser/$(relativesrcdir)/addons

include $(topsrcdir)/config/rules.mk

libs::
	rm -rf $(TESTXPI)
	$(NSINSTALL) -D $(TESTXPI)
	if [ -d $(ADDONSRC) ]; then \
		$(EXIT_ON_ERROR) \
		for dir in $(ADDONSRC)/*; do \
			base=`basename $$dir` ; \
			(cd $$dir && zip -q $(TESTXPI)/$$base.xpi *) \
		done \
	fi
