@depends(target)
def toolkit_choices(target):
    if target.os == "WINNT":
        return ("cairo-windows",)
    elif target.os == "OSX":
        return ("cairo-cocoa",)
    elif target.os == "Android":
        return ("cairo-android",)
    else:
        return (
            "cairo-gtk3",
            "cairo-gtk3-wayland",
            "cairo-gtk3-wayland-only",
            "cairo-gtk3-x11-wayland",
        )


@depends(toolkit_choices)
