{
  "manifest_version": 2,
  "name": "TPS",
  "version": "1.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "tps@mozilla.org"
    }
  },

  "experiment_apis": {
    "tps": {
      "schema": "schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "api.js",
        "paths": [["tps"]],
        "events": ["startup"]
      }
    }
  }
}
