DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= metrics
IS_COMPONENT	= 1
LIBRARY_NAME	= metrics
SHORT_LIBNAME	= metrics

XPI_NAME	= metrics

REQUIRES	= \
		xpcom \
		necko \
		content \
		$(NULL)

CPPSRCS		= \
		nsMetricsModule.cpp \
		$(NULL)

SHARED_LIBRARY_LIBS = \
		../src/$(LIB_PREFIX)metrics_s.$(LIB_SUFFIX) \
		$(DEPTH)/modules/libbz2/src/$(LIB_PREFIX)bz2.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS = $(XPCOM_GLUE_LDOPTS) \
		   $(NSPR_LIBS) \
		   $(NULL)

LOCAL_INCLUDES	= \
		-I$(srcdir)/../src \
		-I$(DIST)/public/nss \
		-I$(DIST)/private/nss \
		$(NULL)

include $(topsrcdir)/config/rules.mk
