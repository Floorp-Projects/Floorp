include $(DEPTH)/config/autoconf.mk

DIRS            = functions util

ifndef TX_EXE
MODULE = transformiix
REQUIRES	= string \
		  xpcom \
		  dom \
		  layout \
		  content \
		  content_xsl \
		  widget \
		  necko \
		  $(NULL)
endif

CPPSRCS = Names.cpp \
        Numbering.cpp \
        OutputFormat.cpp \
        ProcessorState.cpp \
        VariableBinding.cpp \
        XSLTProcessor.cpp

include $(topsrcdir)/config/rules.mk

INCLUDES += -I$(srcdir) -I$(srcdir)/../base -I$(srcdir)/../net \
  -I$(srcdir)/../xml -I$(srcdir)/../xml/dom -I$(srcdir)/../xml/util \
  -I$(srcdir)/../xml/parser -I$(srcdir)/../xml/parser/xmlparse \
  -I$(srcdir)/../xml/printer -I$(srcdir)/../xpath -I$(srcdir)/../xslt/util \
  -I$(srcdir)/../xslt/functions

install:: $(OBJS)
