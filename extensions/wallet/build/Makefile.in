		$(DIST)/lib/libcookieviewer_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libsignonviewer_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libwalletpreview_s.$(LIB_SUFFIX) \
		$(DIST)/lib/libwalleteditor_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

