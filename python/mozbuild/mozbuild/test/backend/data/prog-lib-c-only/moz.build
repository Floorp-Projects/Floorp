DIRS += [
    "c-program",
    "cxx-program",
    "c-simple-programs",
    "cxx-simple-programs",
    "c-library",
    "cxx-library",
]


@template
def Program(name):
    PROGRAM = name


@template
def SimplePrograms(names, ext=".cpp"):
    SIMPLE_PROGRAMS += names
    SOURCES += ["%s%s" % (name, ext) for name in names]


@template
def Library(name):
    LIBRARY_NAME = name


@template
def SharedLibrary(name):
    Library(name)

    FORCE_SHARED_LIB = True
