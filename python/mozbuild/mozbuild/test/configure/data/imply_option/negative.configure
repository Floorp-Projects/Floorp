option('--enable-foo', help='enable foo')

@depends('--enable-foo')
def foo(value):
    if value:
        return False

imply_option('--enable-bar', foo)


option('--disable-hoge', help='enable hoge')

@depends('--disable-hoge')
def hoge(value):
    if not value:
        return False

imply_option('--enable-bar', hoge)


option('--enable-bar', default=True, help='enable bar')

@depends('--enable-bar')
def bar(value):
    if not value:
        return value

set_config('BAR', bar)
