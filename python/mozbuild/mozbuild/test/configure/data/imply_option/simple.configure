option('--enable-foo', help='enable foo')

@depends('--enable-foo')
def foo(value):
    if value:
        return True

imply_option('--enable-bar', foo)


option('--enable-bar', help='enable bar')

@depends('--enable-bar')
def bar(value):
    if value:
        return value

set_config('BAR', bar)
