option("--enable-hoge", help="enable hoge")


@depends("--enable-hoge")
def hoge(value):
    return value


option("--enable-foo", help="enable foo")


@depends("--enable-foo", hoge)
def foo(value, hoge):
    if value:
        return True


imply_option("--enable-bar", foo)


option("--enable-bar", help="enable bar")


@depends("--enable-bar")
def bar(value):
    if value:
        return value


set_config("BAR", bar)
