option('--set-foo', help='set foo')

@depends('--set-foo')
def foo(value):
    if value:
        return True

set_define('FOO', foo)


option('--set-bar', help='set bar')

@depends('--set-bar')
def bar(value):
    return bool(value)

set_define('BAR', bar)


option('--set-value', nargs=1, help='set value')

@depends('--set-value')
def set_value(value):
    if value:
        return value[0]

set_define('VALUE', set_value)


option('--set-name', nargs=1, help='set name')

@depends('--set-name')
def set_name(value):
    if value:
        return value[0]

set_define(set_name, True)
