@template
def Library(name):
    '''Template for libraries.'''
    LIBRARY_NAME = name


@template
def RustLibrary(name, features):
    '''Template for Rust libraries.'''
    Library(name)

    IS_RUST_LIBRARY = True
    RUST_LIBRARY_FEATURES = features


RustLibrary('random-crate', ['musthave', 'cantlivewithout'])
