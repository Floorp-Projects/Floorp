NO_UNIX_LDAP	= @NO_UNIX_LDAP@
BUILD_XPIDL	= @BUILD_XPIDL@
BUILD_IDLC = @BUILD_IDLC@
MODULAR_NETLIB  = @MODULAR_NETLIB@
STANDALONE_IMAGE_LIB = @STANDALONE_IMAGE_LIB@

