OS_LDFLAGS      = @LDFLAGS@

OS_INCLUDES	= $(NSPR_CFLAGS) $(JPEG_CFLAGS) $(PNG_CFLAGS) $(ZLIB_CFLAGS)
OS_LIBS		= @LIBS@
ACDEFINES	= @DEFS@

XCFLAGS		= @XCFLAGS@
XLDFLAGS	= @XLDFLAGS@
XLIBS		= @XLIBS@

AS			= @AS@
ASFLAGS     = @ASFLAGS@
AS_DASH_C_FLAG = @AS_DASH_C_FLAG@

