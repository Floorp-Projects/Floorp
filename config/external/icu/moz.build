Library('icu')

if CONFIG['MOZ_SYSTEM_ICU']:
    OS_LIBS += CONFIG['MOZ_ICU_LIBS']
else:
    DIRS += [
        'common',
        'data',
        'i18n',
    ]
    if CONFIG['MOZ_ICU_DATA_ARCHIVE']:
        DIRS += ['stubdata']
        USE_LIBS += ['icustubdata']
    else:
        USE_LIBS += ['icudata']
