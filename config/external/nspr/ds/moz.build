DEFINES['_NSPR_BUILD_'] = True

LOCAL_INCLUDES += [
    '/config/external/nspr',
    '/nsprpub/pr/include',
]

EXPORTS.nspr += [
    '/nsprpub/lib/ds/plarena.h',
    '/nsprpub/lib/ds/plarenas.h',
    '/nsprpub/lib/ds/plhash.h',
]

