LIBRARY_NAME = 'nspr'

if CONFIG['MOZ_FOLD_LIBS']:
    # When folding libraries, nspr is actually in the nss library.
    USE_LIBS += [
        'nss',
    ]
elif CONFIG['MOZ_BUILD_NSPR']:
    USE_LIBS += [
        '/nsprpub/lib/ds/plds4',
        '/nsprpub/lib/libc/src/plc4',
        '/nsprpub/pr/src/nspr4',
    ]
else:
    OS_LIBS += CONFIG['NSPR_LIBS']
