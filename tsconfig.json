{
  "typeAcquisition": {
    "enable": true,
    "include": ["./@types/content.d.ts", "vite/client.d.ts"]
  },
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolvePackageJsonExports": false,
    "isolatedModules": true,
    "jsxImportSource": "solid-js",
    "paths": {
      "@types/*": ["./@types/*"]
    },
    "composite": true
  },
  "exclude": ["_dist/**"]
}
