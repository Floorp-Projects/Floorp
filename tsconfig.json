{
  "typeAcquisition": {
    "enable": true,
    "include": ["./@types/content.d.ts", "vite/client.d.ts"]
  },
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolvePackageJsonExports": false,
    "isolatedModules": true,
    "jsxImportSource": "solid-js",
    "paths": {
      "@types/*": ["./@types/*"],
      "@solid-xul/*": ["./src/components/solid-xul/*"],
      "@private/*": ["./src/components/private/src/content/*"],
      "@content/*": ["./src/content/*"],
      "@skin/*": ["./src/skin/*"]
    }
  },
  "exclude": ["dist/**"]
}
