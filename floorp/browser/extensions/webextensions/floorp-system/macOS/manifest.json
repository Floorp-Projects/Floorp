{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "Floorp のシステムが含まれています。このアドオンは削除・停止ができません。",
  "version": "1.1",
  "homepage_url": "https://ablaze.one",
  "default_locale": "en",
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "clipboardWrite",
    "mozillaAddons",
    "about:*",
    "downloads",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "moz-extension://*/views/options/*"
      ],
      "js": [
        "gesturefy/gesturefy.js"
      ]
    }
],
  "experiment_apis": {
    "aboutConfigPrefs": {
        "schema": "API/aboutConfigPrefs.json",
        "parent": {
            "scopes": ["addon_parent"],
            "script": "API/aboutConfigPrefs.js",
            "paths": [["aboutConfigPrefs"]]
        }
    },
    "BrowserInfo": {
      "schema": "API/BrowserInfo.json",
      "parent": {
        "scopes": ["addon_parent"],
        "script": "API/BrowserInfo.js",
        "paths": [["BrowserInfo"]]
      }
    },
    "browserL10n": {
      "schema": "API/browserL10n.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "script": "API/browserL10n.js",
        "paths": [
          [
            "browserL10n"
          ]
        ]
      }
    }
  },
  "browser_action": {
		"default_icon":  "icons/floorp.png",
		"default_title": "__MSG_browserActionTitle__",
		"browser_style":  true
	},
  "page_action": {
    "browser_style": true,
    "default_icon": "icons/icon.png",
    "default_popup": "qr-code/popup.html",
    "show_matches": [
      "<all_urls>"
    ]
  },
  "background": {
    "scripts": [
      "gesturefy/background.js",
      "webcompat.js",
      "update.js",
      "download-notification.js"
    ]
  },
   "applications": {
     "gecko": {
      "id": "floorp-system@floorp.ablaze.one"
    }
  }
}
