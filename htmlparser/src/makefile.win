EXPORTS=					\
	nshtmlpars.h				\
	nsITokenizer.h \
	nsIExpatTokenizer.h			\
	nsIContentSink.h			\
	nsIHTMLContentSink.h			\
	nsILoggingSink.h			\
	nsHTMLContentSinkStream.h		\
	nsHTMLToTXTSinkStream.h		\
	nsHTMLEntities.h			\
	nsHTMLTokens.h				\
	nsIParserNode.h				\
	nsIParser.h				\
	nsParser.h				\
	nsToken.h				\
	nsIDTDDebug.h				\
	nsIParserFilter.h			\
