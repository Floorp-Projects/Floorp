	CParserContext.cpp			\
	nsParserFactory.cpp			\
	nsParserNode.cpp			\
	nsScanner.cpp				\
	nsToken.cpp				\
	nsTokenHandler.cpp			\
	nsHTMLContentSinkStream.cpp		\
	nsHTMLToTXTSinkStream.cpp		\
