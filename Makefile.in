  modules/libutil		\
  base				\
  intl				\
  js				\
  modules/security/freenav	\
  modules/libpref		\
  modules/libimg		\
  modules/oji			\
  modules/plugin		\
  modules/libjar		\
  caps				\
  lib/xp			\
  lib/libpwcac			\
  network			\
  htmlparser			\
  expat             \
  gfx				\
  dom				\
