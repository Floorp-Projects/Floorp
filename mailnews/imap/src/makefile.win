DEPTH=..\..\..
IGNORE_MANIFEST=1

include <$(DEPTH)\config\config.mak>

LIBRARY_NAME=imap
MODULE= mailnews
REQUIRES=xpcom js nspr netlib

CPPSRCS=    nsImapUrl.cpp								\
			nsImapProtocol.cpp							\
			nsImapProxyEvent.cpp								\
			nsIMAPHostSessionList.cpp								\
			nsIMAPGenericParser.cpp		\
			nsIMAPBodyShell.cpp								\
			nsIMAPNamespace.cpp								\
			nsImapSearchResults.cpp \
			nsImapFlagAndUidState.cpp \
			nsImapServerResponseParser.cpp \
			$(NULL)

CPP_OBJS=   .\$(OBJDIR)\nsImapUrl.obj					\
			.\$(OBJDIR)\nsImapProtocol.obj				\
			.\$(OBJDIR)\nsImapProxyEvent.obj				\
			.\$(OBJDIR)\nsIMAPHostSessionList.obj				\
			.\$(OBJDIR)\nsIMAPBodyShell.obj						\
			.\$(OBJDIR)\nsIMAPGenericParser.obj					\
			.\$(OBJDIR)\nsIMAPNamespace.obj					\
			.\$(OBJDIR)\nsImapSearchResults.obj \
			.\$(OBJDIR)\nsImapFlagAndUidState.obj \
			.\$(OBJDIR)\nsImapServerResponseParser.obj \
			$(NULL)


EXPORTS=	nsImapUrl.h									\
			nsImapProtocol.h							\
			nsImapCore.h							\
			nsImapProxyEvent.h							\
            $(NULL)

LINCS=													\
		-I$(PUBLIC)\xpcom								\
		-I$(PUBLIC)\mailnews							\
		-I$(PUBLIC)\nsprpub								\
		-I$(PUBLIC)\js									\
		-I$(PUBLIC)\raptor								\
		-I$(PUBLIC)\netlib								\
		 $(NULL)

LCFLAGS =		   \
        $(LCFLAGS) \
        $(DEFINES) \
        $(NULL)

include <$(DEPTH)\config\rules.mak>

libs:: $(LIBRARY)
	$(MAKE_INSTALL) $(LIBRARY) $(DIST)\lib

clobber::
	rm -f $(DIST)\lib\$(LIBRARY_NAME).lib
