MODULE		= addrbook
LIBRARY_NAME	= addrbook_s
META_COMPONENT = mail
REQUIRES	= xpcom string rdf rdfutil appshell dom layout widget mork docshell pref necko locale webshell uconv msgbase msgbaseutil mime msgcompose appcomps

CPPSRCS		= \
		nsAddressBook.cpp \
		nsAddrBookSession.cpp \
		nsAbRDFDataSource.cpp \
		nsAbMDBRDFResource.cpp \
		nsCardDataSource.cpp \
		nsDirectoryDataSource.cpp \
		nsAbCardProperty.cpp \
		nsDirPrefs.cpp \
		nsAddrDatabase.cpp \
		nsAbDirProperty.cpp \
		nsAbAutoCompleteSession.cpp \
		nsAbAddressCollecter.cpp \
