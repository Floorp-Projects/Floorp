		nsAbMDBCardProperty.cpp \
		nsAbMDBCard.cpp \
		nsAbBSDirectory.cpp \
		nsAddbookUrl.cpp    \
		$(NULL)

EXPORTS		= \
		nsAddressBook.h \
		nsAddrBookSession.h \
		nsAbRDFDataSource.h \
		nsAbMDBRDFResource.h \
		nsCardDataSource.h \
		nsDirectoryDataSource.h \
		nsAbCardProperty.h \
		nsDirPrefs.h \
		nsAddrDatabase.h \
		nsAbDirProperty.h \
