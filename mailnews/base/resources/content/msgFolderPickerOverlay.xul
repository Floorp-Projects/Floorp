                <menupopup>
                  <menuitem hidden="true" uri="..." data="..." value="rdf:http://home.netscape.com/NC-rdf#Name"/>
                  <!-- <menuseparator/> -->
                </menupopup>
              </menu>
          </menupopup>
        </rule>
