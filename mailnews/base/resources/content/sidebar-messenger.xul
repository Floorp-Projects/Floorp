<!DOCTYPE window SYSTEM "chrome://messenger/locale/sidebar-messenger.dtd" >
<window
  xmlns:html="http://www.w3.org/TR/REC-html40"
  xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
  onload="Init('chrome://messenger/content/sidebar-messenger.rdf',
               'NC:MessengerSidebarRoot');" align="vertical">

<html:script src="chrome://sidebar/content/sidebar.js" />
<box id="sidebox" align="vertical" flex="100%">
 <box class="sidebartitle">
  <html:div class="sidebartitlelabel">&sidebar.title.label;</html:div>
  <spring flex="100%"/>
  <titledbutton class="borderless paneltitle" 
                value="&sidebar.reload.label;"
                onclick="window.location.reload()" />
  <titledbutton class="borderless paneltitle" 
                value="&sidebar.customize.label;" 
				onclick="dialogWindow=makeDialog()" />
 </box>
</box>
</window>
