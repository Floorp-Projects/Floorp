		AccountWizard.dtd \
		am-advanced.dtd \
		am-imap-advanced.dtd \
		am-copies.dtd \
		am-main.dtd \
		am-identity-advanced.dtd \
		am-server-top.dtd \
		prefs.properties \
        am-serverwithnoidentities.dtd   \
		SmtpServerList.dtd \
		smtpEditOverlay.dtd \
		$(NULL)

include $(topsrcdir)/config/rules.mk

