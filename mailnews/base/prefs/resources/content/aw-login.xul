<?xml-stylesheet href="chrome://messenger/skin/" type="text/css"?>
<?xul-overlay href="chrome://messenger/content/aw-overlay.xul"?>
<!DOCTYPE window SYSTEM "chrome://messenger/locale/aw-login.dtd" >
<window id="loginpage" xmlns:html="http://www.w3.org/TR/REC-html40"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
    align="vertical"
    class="dialog"
    onload="parent.wizardManager.onPageLoad('login');">

<html:script language="JavaScript" src="chrome://global/content/strres.js"/>
<html:script language="JavaScript" src="chrome://messenger/content/aw-login.js"/>

  <box id="wizardHeader">
    <titledbutton class="left-header-text" value="&loginTitle.label;"/>
  </box>

  <box align="vertical">
    <html:div>&usernameDesc.label; &usernameExample.label;</html:div>
    <html:div>
      <html:label for="username">&usernameLabel.label;</html:label>
      <html:input type="text" name="username" id="username"/>
    </html:div>
  </box>
  <spring class="spacer"/>
  <box align="vertical">
    <html:div class="title">&passwordTitle.label;</html:div>
    <html:div>&savePasswordDesc.label;</html:div>
    <spring class="spacer"/>
    <html:div>&savePasswordLabel.label;</html:div>
    <html:div>
      <html:input type="checkbox" name="rememberPassword"
                  onchange="onSavePassword(event.target);"
                  id="rememberPassword"/>
      <html:label for="rememberPassword">&savePasswordCheckbox.label;</html:label>
    </html:div>
    <spring class="spacer"/>
    <html:div style="padding-left: 20px">
      <html:label>&passwordDesc.label;</html:label>
      <html:div>
        <html:label for="password">&passwordLabel.label;</html:label>
        <html:input type="password"
                    name="password" id="password"/>
      </html:div>
    </html:div>
  </box>
</window>
