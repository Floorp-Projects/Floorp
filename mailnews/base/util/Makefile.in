include $(DEPTH)/config/autoconf.mk

MODULE		= msgbaseutil
LIBRARY_NAME	= msgbaseutil
META_COMPONENT = mail
EXPORT_LIBRARY = 1
SHORT_LIBNAME	= msgbsutl
REQUIRES	= xpcom \
		  string \
		  msgbase \
		  rdf \
		  necko \
		  msgdb \
		  intl \
		  mork \
		  mailnews \
		  locale \
		  pref \
		  rdfutil \
		  mime \
		  msgcompose \
		  docshell \
		  webshell \
		  wallet \
		  dom \
		  uriloader \
		  appshell \
		  msgimap \
		  msglocal \
		  msgnews \
		  txmgr \
		  uconv \
		  unicharutil \
		  nkcache \
		  mimetype \
		  windowwatcher \
		  $(NULL)

