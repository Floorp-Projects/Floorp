		nsMsgKeyArray.h \
		nsMsgFolder.h \
		nsMsgDBFolder.h \
		nsLocalFolderSummarySpec.h \
		nsNewsSummarySpec.h \
		nsMsgIdentity.h \
		nsMsgIncomingServer.h \
		nsMsgUtils.h \
		nsMsgProtocol.h \
		nsMsgMailNewsUrl.h \
		nsMsgTxn.h \
		nsMsgI18N.h \
		nsMsgUtf7Utils.h \
		$(NULL)

EXTRA_DSO_LDOPTS = \
	-L$(DIST)/bin \
