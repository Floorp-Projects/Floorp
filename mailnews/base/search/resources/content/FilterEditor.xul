<?xml version="1.0"?>
<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<?xml-stylesheet href="chrome://messenger/skin/" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://messenger/locale/FilterEditor.dtd" >
<window
  xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
  xmlns:html="http://www.w3.org/TR/REC-html40"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
<html:script language="JavaScript" src="FilterEditor.js"/>

<box align="vertical" style="width: 100%;">
  <box align="horizontal" class="padded">
    <html:div>Filter Name:</html:div>
    <html:input type="text" flex="100%"/>
  </box>
  <box align="vertical" class="cleanborder" flex="100%">
    <html:div>
      <html:input type="radio" checked="1" name="andor" value="and"/>
      &matchAll.label;
    </html:div>
    <html:div>
      <html:input type="radio" name="andor" value="or"/>
      &matchAny.label;
    </html:div>
    <spring class="spacer"/>
    <box id="rulebox" alignment="vertical" flex="100%">
      <box id="rule1" alignment="horizontal" flex="100%">
        <html:select id="rule1-attribute"
                     onchange="updateRule(this.parentNode);">
          <html:option value="subject">&subject.label;</html:option>
          <html:option value="sender">&sender.label;</html:option>
          <html:option value="date">&date.label;</html:option>
          <html:option value="any">&anyText.label;</html:option>
          <html:option value="keyword">&keyword.label;</html:option>
          <html:option value="age">&age.label;</html:option>
        </html:select>
        <box align="horizontal" id="rule1-verb">
        <spring name="preverb" class="spacer"/>
        <html:select>
          <html:option>&contains.label;</html:option>
          <html:option>&nocontains.label;</html:option>
        </html:select>
        <spring class="spacer"/>
        <html:input type="text" flex="100%"/>
        </box>
      </box>
    </box>
    <spring class="spacer"/>
    <box alignment="horizontal">
      <titledbutton class="push" value="&more.label;"/>
      <titledbutton class="push" value="&less.label;"/>
    </box>
  </box>
  <html:div>&filterAction.label;</html:div>
  <box alignment="horizontal" class="cleanborder">
    <html:select>
      <html:option>&moveToFolder.label;</html:option>
      <html:option>&changePriority.label;</html:option>
      <html:option>&delete.label;</html:option>
      <html:option>&markRead.label;</html:option>
      <html:option>&ignoreThread.label;</html:option>
      <html:option>&watchThread.label;</html:option>
    </html:select>
    <spring class="spacer"/>
    <html:select flex="100%">
      <html:option>Server1</html:option>
      <html:option>  Folder 1</html:option>
    </html:select>
    <spring class="spacer"/>
    <titledbutton class="push" value="&newFolderButton.label;"/>
  </box>
  <box alignment="vertical" class="cleanborder">
    <html:div>&description.label;</html:div>
    <html:textarea flex="100%"/>
  </box>
</box>
</window>
