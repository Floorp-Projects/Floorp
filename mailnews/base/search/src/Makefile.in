DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= msgbase
XPIDL_MODULE	= msgsearch
LIBRARY_NAME	= msgsearch_s
META_COMPONENT = mail
MOZILLA_INTERNAL_API = 1
EXPORT_DIR	= $(DIST)/bin/isp

REQUIRES	= xpcom \
		  xpcom_obsolete \
		  string \
		  mailnews \
		  msgdb \
		  msgbaseutil \
		  necko \
		  mime \
		  msgimap \
		  rdf \
		  msglocal \
		  intl \
		  unicharutil \
		  locale \
                  msgcompose \
		  pref \
		  msgnews \
		  txmgr \
		  addrbook \
		  docshell \
		  $(NULL)

CPPSRCS		= \
		nsMsgFilterService.cpp \
		nsMsgFilterList.cpp \
		nsMsgFilter.cpp \
		nsMsgSearchTerm.cpp \
		nsMsgBodyHandler.cpp \
		nsMsgLocalSearch.cpp \
		nsMsgSearchValue.cpp \
		nsMsgSearchAdapter.cpp \
		nsMsgSearchSession.cpp \
		nsMsgImapSearch.cpp \
		nsMsgSearchNews.cpp \
		nsMsgFilterDataSource.cpp \
		nsMsgFilterDelegateFactory.cpp \
		$(NULL)

EXPORT_RESOURCE_FILES	= \
				  SpamAssassin.sfd \
				  SpamPal.sfd \
			        $(NULL)

# we don't want the shared lib, but we want to force the creation of a static lib.
FORCE_STATIC_LIB = 1

include $(topsrcdir)/config/rules.mk

GARBAGE += $(addprefix $(EXPORT_DIR)/, $(EXPORT_RESOURCE_FILES)) 

libs:: $(EXPORT_RESOURCE_FILES)
	 $(INSTALL) $^ $(EXPORT_DIR)

install:: $(EXPORT_RESOURCE_FILES)
	    $(SYSINSTALL) $(IFLAGS1) $^ $(DESTDIR)$(mozappdir)/isp
