DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= msglocal
LIBRARY_NAME	= msglocal_s

CPPSRCS		= \
		nsPop3Protocol.cpp \
		nsPop3URL.cpp \
		nsPop3Sink.cpp \
		nsParseMailbox.cpp \
		nsMailboxProtocol.cpp \
		nsMailboxUrl.cpp \
		nsLocalMailFolder.cpp \
		nsMailboxService.cpp \
		nsPop3Service.cpp \
		nsPop3IncomingServer.cpp \
		nsLocalMessage.cpp \
		nsLocalUtils.cpp \
		nsLocalUndoTxn.cpp \
		nsLocalStringBundle.cpp \
		nsNoIncomingServer.cpp \
		nsMovemailIncomingServer.cpp \
		nsNoneService.cpp       \
		nsMovemailService.cpp   \
		$(NULL)

EXPORTS		= \
		nsPop3Protocol.h \
		nsPop3URL.h \
		nsPop3Sink.h \
		nsParseMailbox.h \
		nsMailboxUrl.h \
		nsMailboxProtocol.h \
		nsMailboxService.h \
		nsPop3Service.h \
		nsLocalMailFolder.h \
		nsPop3IncomingServer.h \
		nsLocalMessage.h \
		nsLocalStringBundle.h \
		nsNoneService.h	\
		nsNoIncomingServer.h \
		nsMovemailIncomingServer.h \
		nsMovemailService.h \
		$(NULL)

# we don't want the shared lib, but we want to force the creation of a static lib.
override NO_SHARED_LIB=1
override NO_STATIC_LIB=

include $(topsrcdir)/config/rules.mk

