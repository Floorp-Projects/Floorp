DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= msglocal
LIBRARY_NAME	= localmail
META_COMPONENT = mail
EXPORT_LIBRARY = 1
SHORT_LIBNAME 	= msglocal
IS_COMPONENT	= 1
MODULE_NAME	= local_mail_services
REQUIRES	= xpcom \
		  string \
		  mailnews \
		  msgbase \
		  msgbaseutil \
		  msgdb \
		  necko \
		  txmgr \
		  rdf \
		  rdfutil \
		  mime \
		  intl \
		  pref \
		  nkcache \
		  $(NULL)

ifeq ($(USE_SHORT_LIBNAME),1)
EXTRA_DSO_LIBS = msgbsutl
else
EXTRA_DSO_LIBS = msgbaseutil
endif

CPPSRCS		= nsMsgLocalFactory.cpp
EXPORTS		= nsMsgLocalCID.h

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/libmsglocal_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		-L$(DIST)/lib \
		$(DIST)/lib/librdfutil_s.$(LIB_SUFFIX) \
		-L$(DIST)/bin \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

ifdef MOZ_MOVEMAIL
DEFINES	+= -DHAVE_MOVEMAIL
endif

