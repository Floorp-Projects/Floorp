DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= msglocal
LIBRARY_NAME	= localmail
IS_COMPONENT	= 1

CPPSRCS		= nsMsgLocalFactory.cpp
EXPORTS		= nsMsgLocalCID.h

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/libmsglocal_s.a \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(MKSHLIB_FORCE_ALL) \
		$(SHARED_LIBRARY_LIBS) \
		$(MKSHLIB_UNFORCE_ALL) \
		-L$(DIST)/lib \
		$(DIST)/lib/librdfutil_s.a \
		-L$(DIST)/bin \
		$(XPCOM_LIBS) \
		-lmsgbaseutil \
		$(NSPR_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

$(LIBRARY) $(SHARED_LIBRARY): $(SHARED_LIBRARY_LIBS) Makefile

