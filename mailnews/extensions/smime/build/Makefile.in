DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= msgsmime
LIBRARY_NAME	= msgsmime
META_COMPONENT = mail
EXPORT_LIBRARY = 1
SHORT_LIBNAME	= msgsmime
IS_COMPONENT	= 1
MODULE_NAME	= nsMsgSMIMEModule
REQUIRES	= xpcom \
		  string \
		  msgbase \
		  msgbaseutil \
		  editor \
		  necko \
		  dom \
		  uriloader \
		  mime \
		  addrbook \
		  rdf \
		  intl \
		  mailnews \
		  widget \
		  msgdb \
		  appshell \
		  nkcache \
                  msgcompose \
                  pipnss \
		  $(NULL)

ifeq ($(USE_SHORT_LIBNAME),1)
EXTRA_DSO_LIBS = msgbsutl
else
EXTRA_DSO_LIBS = msgbaseutil
endif

CPPSRCS		= nsMsgSMIMEFactory.cpp
EXPORTS		= nsMsgSMIMECID.h

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/libmsgsmime_s.$(LIB_SUFFIX) \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		-L$(DIST)/bin \
		-L$(DIST)/lib \
		$(EXTRA_DSO_LIBS) \
		$(MOZ_JS_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

include $(topsrcdir)/config/rules.mk

