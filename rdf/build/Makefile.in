DEPTH		= ../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= rdf
LIBRARY_NAME	= rdf
IS_COMPONENT	= 1

REQUIRES	= dom js netlib rdf raptor xpcom

CPPSRCS		= \
		dlldeps.cpp \
		nsRDFFactory.cpp \
		$(NULL)

EXPORTS		= nsRDFCID.h
EXPORTS		:= $(addprefix $(srcdir)/, $(EXPORTS))

# XXX Note dependencies on implementation headers for factory functions

SHARED_LIBRARY_LIBS = \
		$(DIST)/lib/librdfbase_s.a \
		$(DIST)/lib/librdfcontent_s.a \
		$(DIST)/lib/librdfdatasource_s.a \
		$(DIST)/lib/librdfutil_s.a \
		$(DIST)/lib/libneckoutil_s.a \
		$(NULL)

EXTRA_DSO_LDOPTS = \
		$(MKSHLIB_FORCE_ALL) \
		$(SHARED_LIBRARY_LIBS) \
		$(MKSHLIB_UNFORCE_ALL) \
		-L$(DIST)/bin \
		-ljsdom \
		$(NULL)

include $(topsrcdir)/config/rules.mk

INCLUDES	+= \
		-I$(srcdir)/../base/src \
		-I$(srcdir)/../content/src \
		-I$(srcdir)/../datasource/src \
		$(NULL)

$(LIBRARY) $(SHARED_LIBRARY): $(SHARED_LIBRARY_LIBS) Makefile

