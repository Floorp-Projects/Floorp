{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "command": "${workspaceRoot}/mach",
    "windows": {
      "command": "\"\\mozilla-build\\start-shell.bat mach\""
    },
    "args": ["--log-no-times"],
    "echoCommand": true,
    "tasks": [
      {
        "label": "clobber-python",
        "args": ["clobber", "python"],
        "problemMatcher": []
      },
      {
        "label": "configure",
        "problemMatcher": []
      },
      {
        "label": "build",
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^.*?([^\\s]*)[:(](\\d+)[:,](\\d+)[)]?:\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      },
      {
        "label": "build-binaries",
        "args": ["--log-no-times", "build", "binaries"],
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^(.*)[:(](\\d+)[:,](\\d+)[)]?:\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        },
        "group": {
            "kind": "build",
            "isDefault": true
        }
      },
      {
        "label": "build-faster",
        "args": ["--log-no-times", "build", "faster"],
        "problemMatcher": {
          "owner": "cpp",
          "fileLocation": "absolute",
          "pattern": {
            "regexp": "^(.*)[:(](\\d+)[:,](\\d+)[)]?:\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
          }
        }
      },
      {
        "label": "run",
        "args": ["-purgecaches"],
        "problemMatcher": []
      },
      {
        "label": "lint-wo",
        "args": ["lint", "-wo"],
        "problemMatcher": ["$eslint-stylish"]
      },
      {
        "label": "eslint",
        "problemMatcher": ["$eslint-stylish"]
      },
      {
        "label": "eslint-fix",
        "args": ["eslint", "--fix", "${file}"],
        "problemMatcher": ["$eslint-stylish"]
      },
      {
        "label": "test",
        "args": ["${relativeFile}"],
        "group":"test",
        "presentation": {
            "reveal": "always",
            "panel": "new"
        }
      },
      {
        "label": "mochitest",
        "args": ["${relativeFile}"],
        "problemMatcher": {
          "fileLocation": ["relative", "${workspaceRoot}"],
          "pattern": {
              "regexp": "^.*\\s+(TEST-UNEXPECTED-FAIL|TEST-UNEXPECTED-PASS)\\s+\\|\\s+([^\\s]*)\\s+\\|\\s+(.*)$",
              "severity": 1,
              "file": 2,
              "message": 3
          }
        },
        "presentation": {
            "reveal": "always",
            "panel": "new"
        }
      },
      {
        "label": "reftest",
        "args": ["${relativeFile}"],
        "problemMatcher": {
          "fileLocation": ["absolute"],
          "pattern": {
              "regexp": "^.*\\s+(TEST-UNEXPECTED-FAIL|TEST-UNEXPECTED-PASS)\\s+\\|\\s+file:\/\/([^\\s]*)\\s+==\\s+[^\\s]*\\s+\\|\\s+(.*)$",
              "severity": 1,
              "file": 2,
              "message": 3
          }
        },
        "presentation": {
            "reveal": "always",
            "panel": "new"
        }
      },
      {
        "label": "xpcshell-test",
        "args": ["${relativeFile}", "--sequential"],
        "problemMatcher": {
          "fileLocation": ["relative", "${workspaceRoot}"],
          "pattern": {
              "regexp": "^.*\\s+(FAIL|ERROR)\\s+\\[([^\\s]*)\\s+:\\s+(\\d+)\\]\\s+(.*)$",
              "severity": 1,
              "file": 2,
              "location": 3,
              "message": 4
          }
        },
        "presentation": {
              "reveal": "always",
              "panel": "new"
        }
      }
    ]
}
