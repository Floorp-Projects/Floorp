DEPTH		= ../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= locale
LIBRARY_NAME	= nslocale
IS_COMPONENT	= 1
EXTRA_DSO_LIBS	= nslocale_s


CPPSRCS		= \
		nsOS2Locale.cpp \
		nsLocaleFactoryOS2.cpp \
		nsCollationOS2.cpp \
		nsDateTimeFormatOS2.cpp \
		nsOS2LocaleFactory.cpp \
		nsLocaleModule.cpp \
		$(NULL)

EXTRA_DSO_LDOPTS = $(EXTRA_DSO_LIBS) \
		$(MOZ_COMPONENT_LIBS) \
		$(NULL)

ifeq ($(MOZ_OS2_TOOLS),VACPP)
EXTRA_DSO_LDOPTS += libuls.$(LIB_SUFFIX) ../libnslocale_s.$(LIB_SUFFIX)
else
EXTRA_DSO_LDOPTS += -llibuni
endif

include $(topsrcdir)/config/rules.mk

INCLUDES	+= -I$(srcdir)/..


