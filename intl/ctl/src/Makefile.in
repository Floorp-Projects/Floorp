DEPTH		= ../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE		= ctl
LIBRARY_NAME	= ctl
EXPORT_LIBRARY	= 1
IS_COMPONENT	= 1
LIBXUL_LIBRARY	= 1
MODULE_NAME	= nsCtlLEModule

PACKAGE_FILE = ctl.pkg

REQUIRES	= \
		  xpcom \
		  string \
		  uconv \
		  locale \
		  $(NULL)

EXTRA_DSO_LIBS	= mozpango

CPPSRCS		= \
	nsULE.cpp \
	nsUnicodeToTIS620.cpp \
	nsUnicodeToSunIndic.cpp \
	nsUnicodeToThaiTTF.cpp \
	nsCtlLEModule.cpp \
	$(NULL)

include $(topsrcdir)/config/rules.mk

LOCAL_INCLUDES += -I$(srcdir)/pangoLite

EXTRA_DSO_LDOPTS += $(LIBS_DIR)

ifdef MOZ_ENABLE_GTK2
  CXXFLAGS        += $(MOZ_GTK2_CFLAGS)
  EXTRA_DSO_LDOPTS += $(MOZ_GTK2_LIBS)
else
  CXXFLAGS  += $(GLIB_CFLAGS)
  EXTRA_DSO_LDOPTS += $(GLIB_GMODULE_LIBS)
endif

EXTRA_DSO_LDOPTS += \
	$(MOZ_COMPONENT_LIBS) \
	$(EXTRA_DSO_LIBS) \
	$(NULL)
